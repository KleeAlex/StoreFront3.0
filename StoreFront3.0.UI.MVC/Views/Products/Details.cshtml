@model StoreFront.DATA.EF.Product

@{
    ViewBag.Title = Model.ProductName;
}

<h2>@ViewBag.Title</h2>

<div style="float:left; margin-right:10em">
    <img src="~/Content/images/@Model.ItemImage" alt="Item Image" title="@Model.ProductName" style="width:750px; height:750px" />
</div>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

        @if (User.IsInRole("Admin"))
        {

            <dt>
                @Html.DisplayNameFor(model => model.UnitsSold)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UnitsSold)
            </dd>
        }

        <dt>
            @Html.DisplayNameFor(model => model.ItemImage)
        </dt>

      

        <dt>
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Manufacturer.ManufacturersName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Manufacturer.ManufacturersName)
        </dd>


        @if (User.IsInRole("Admin"))
        {

            <dt>
                @Html.DisplayNameFor(model => model.Shipping.ShippingStatus)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Shipping.ShippingStatus)
            </dd>
        }

        <dt>
            @Html.DisplayNameFor(model => model.Stock.StockStatus)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Stock.StockStatus)
        </dd>

    </dl>

    <p>
        @using (Html.BeginForm("AddToCart", "Products", new { @productID = Model.ProductID }, FormMethod.Post, new { @class = "text-center" }))
        {
            @Html.HiddenFor(x => x.ProductID)
            <span class="label" style="color: #000;">Quantity: </span>
            @Html.TextBox("Qty", 1, new { @class = "form-control", @style = "max-width: 50px; display: inline;" })
            <input type="submit" value="Add to Cart" class="btn btn-primary" name="qty" />
        }
    </p>



</div>


@if (User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.ProductID }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
}

<br/>
